<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/status_indicator"
            android:background="@color/account_status_unknown"
            android:orientation="horizontal"
            android:layout_width="@dimen/width_status"
            android:layout_height="match_parent"
            />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_padding_short"
            android:paddingBottom="@dimen/card_padding_short"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/desc_last_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_checked"
                android:layout_below="@+id/name"
                android:paddingRight="@dimen/text_space"
                />

            <TextView
                android:id="@+id/last_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_date"
                android:textColor="@android:color/black"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/desc_last_checked"
                />

            <TextView
                android:id="@+id/desc_breach_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_below="@+id/desc_last_checked"
                android:paddingRight="@dimen/text_space"
                />

            <TextView
                android:id="@+id/breach_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_placeholder"
                android:textColor="@android:color/black"
                android:layout_below="@+id/desc_last_checked"
                android:layout_toRightOf="@+id/desc_breach_status"
                />

        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>